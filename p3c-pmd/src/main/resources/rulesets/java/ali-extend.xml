<?xml version="1.0"?>

<ruleset name="AlibabaJavaExceptions" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
    <description>ExtendJavaExceptions</description>

    <!-- 方法的参数不能多余5个 -->
    <rule name="MethodParamsNumRule"
          language="java"
          message="java.extend.MethodParamsNumRule.rule.msg"
          class="com.xenoamess.p3c.pmd.lang.java.rule.extend.MethodParamsNumRule">
        <priority>2</priority>
        <example>
            <![CDATA[
        public class Example {
         public void fn(int a, int b, int c,int d, int f, int g) {
             dosomething();
         }
        }
  ]]>
        </example>
    </rule>

    <rule name="StringSleuthRule"
          language="java"
          message="java.extend.MethodParamsNumRule.rule.msg"
          class="com.xenoamess.p3c.pmd.lang.java.rule.extend.StringSleuthRule">
        <priority>2</priority>
        <example>
            <![CDATA[
        public class Example {
            public void test() {
                // ...
            }
        }
  ]]>
        </example>
    </rule>

    <rule name="CheckChineseNameRule"
          language="java"
          message="java.extend.CheckChineseNameRule.rule.msg"
          class="com.xenoamess.p3c.pmd.lang.java.rule.extend.CheckChineseNameRule">
        <priority>2</priority>
        <example>
            <![CDATA[
        public class Example {
            public void test() {
                // ...
            }
        }
  ]]>
        </example>
    </rule>

</ruleset>
